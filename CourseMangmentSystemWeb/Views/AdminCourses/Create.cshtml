@model CourseMangmentSystemWeb.Models.Course

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="margin-left:100px; margin-top:20px;"  >
    <h1> <i class="bi bi-plus-circle-fill"></i> &nbsp Create Course</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control " style="background-color:rgb(240,240,240)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" style="background-color:rgb(240,240,240)" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Hours" class="control-label"></label>
                    <select class="form-select" id="inputGroupSelect02" style="background-color:rgb(240,240,240)">
    <option selected>Choose...</option>
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
  </select>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="DepartmentId" class="control-label"></label>
                    <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" style="background-color:rgb(240,240,240)"></select>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="InstractorId" class="control-label"></label>
                    <select asp-for="InstractorId" class="form-control" asp-items="ViewBag.InstractorId" style="background-color:rgb(240,240,240)"></select>
            </div>
                <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="PhotoUrl" class="control-label"></label>
                    <input asp-for="PhotoUrl" type="file" class="form-control" style="background-color:rgb(240,240,240)" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-warning " style="width:100px; color:white" />
                    <a asp-action="Index" class="btn btn-danger  ms-1" >  Back to List  </a>
            </div>
        </form>
    </div>
</div>

