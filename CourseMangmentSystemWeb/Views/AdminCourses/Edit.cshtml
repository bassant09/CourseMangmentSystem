@model CourseMangmentSystemWeb.Models.Course
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="margin-left:100px; margin-top:20px;">
    <h1> <i class="bi bi-pencil-fill"></i>&nbsp Edit Course</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" style="background-color:rgb(240,240,240) " />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" style="background-color:rgb(240,240,240) " />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="Hours" class="control-label"></label>
                    <input asp-for="Hours" class="form-control" style="background-color:rgb(240,240,240)"  />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="DepartmentId" class="control-label"></label>
                    <select asp-for="DepartmentId" class="form-control asp-items="ViewBag.DepartmentId" style="background-color:rgb(240,240,240)"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
                <div class="form-group" style="margin-bottom:8px;">
                <label asp-for="InstractorId" class="control-label"></label>
                    <select asp-for="InstractorId" class="form-control" asp-items="ViewBag.InstractorId" style="background-color:rgb(240,240,240)"></select>
                <span asp-validation-for="InstractorId" class="text-danger"></span>
            </div>
                <div class="form-group"style="margin-bottom:20px;">
                    <label asp-for="PhotoUrl" class="control-label"></label>
                    <input asp-for="PhotoUrl" type="file" class="form-control" style="background-color:rgb(240,240,240)" />
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
            <div class="form-group text-center"  >
                <input type="submit" value="Save" class="btn btn-primary" style="width:100px;" />
                    <a asp-action="Index" class="btn btn-danger  ms-1">  Back to List  </a>
            </div>
        </form>
    </div>
</div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
