@model CourseMangmentSystemWeb.Models.Department

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="margin-left:100px; margin-top:20px;">
    <h1> <i class="bi bi-plus-circle-fill"></i> &nbsp Create Department</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label mb-2"></label>
                <input asp-for="Name" class="form-control mb-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group text-center" style="margin-top:15px;">
                    <input type="submit" value="Create" class="btn btn-warning " style="width:100px; color:white" />
                    <a asp-action="Index" class="btn btn-danger  ms-1">  Back to List  </a>
                </div>
                @* <div asp-validation-summary="All" class="text-danger"></div>*@
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
