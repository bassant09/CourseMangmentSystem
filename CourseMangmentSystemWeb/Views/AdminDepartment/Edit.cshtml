@model CourseMangmentSystemWeb.Models.Department

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div style="margin-left:100px; margin-top:20px;">
    <h1> <i class="bi bi-pencil-fill"></i>&nbsp Edit Department</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group text-center" style="margin-top:20px;">
                    <input type="submit" value="Save" class="btn btn-primary" style="width:100px;" />
                    <a asp-action="Index" class="btn btn-danger  ms-1">  Back to List  </a>
                </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
