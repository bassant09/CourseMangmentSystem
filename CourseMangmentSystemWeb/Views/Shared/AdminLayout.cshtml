
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseMangmentSystemWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/CourseMangmentSystemWeb.styles.css" asp-append-version="true" />
    <style>
        .t{
            color: rgb(137, 148, 153);

        }
        .t:hover{
           background-color: rgb(70, 70, 70);

                color: white;
        }
        .nv{
            color:white;
            text-decoration: none;
            font-size:18px;
            
        }
        .nv:hover{
            color: rgb(137, 148, 153);
        }
       
    </style>
</head>
<body>
    <header style="margin-left: 300px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  w-auto navbar-light p-3" style="background-color: rgb(56, 56, 56);">
            <div class="container-fluid">
@*                <a class="navbar-brand text-white" href="#">COURSERA </a>
*@                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ms-5" >
                            <a class="nv  "@* style="color:white"*@  aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item ms-5">
                            <a class="nv " @*style="color:white"*@ href="#">Link</a>
                        </li>
                       
                        
                     
                    </ul>
                   
                    <div>
                        <button type="button" class="btn btn-danger ">Logout</button>
                    </div>
                </div>
                
            </div>
        </nav>
    </header>
    <div class=" d-flex flex-column  position-absolute top-0 bottom-0 " style=" width:300px; background-color:rgb(56, 56, 56); ">
        @*<div class="  text-center " style=" background-color: rgb(56,56,56); margin-top:20px;">
            <a class="navbar-brand m-0 text-white" asp-area="" asp-controller="Admin" asp-action="Index">COURSERA</a>
        </div>*@
        <div class="ms-3" style=" background-color: rgb(56,56,56);  margin-top:20px;">
            <a class=" navbar-brand text-white" style=" font-weight: bolder; font-size: x-large;" asp-area="" asp-controller="Admin" asp-action="Index">CoursesApplication</a>
        </div>
       <div class="position-relative text-center" style="margin-top:80px ">
            <a class=" navbar-brand text-white btn btn-danger " style="width:250px;margin-bottom:20px;" asp-area="" asp-controller="Admin" asp-action="Index"> <i class="bi bi-graph-up-arrow"></i>&nbsp Dashboard</a>
            <a class=" navbar-brand  btn btn t" style="width:250px; margin-bottom:20px; " asp-area="" asp-controller="AdminCourses" asp-action="Index"> <i class="bi bi-book"></i> &nbsp Courses</a>
            <a class=" navbar-brand  btn btn t" style="width:250px ;margin-bottom:20px; " asp-area="" asp-controller="AdminDepartment" asp-action="Index"> <i class="bi bi-bar-chart"></i> &nbsp Departments</a>
            <a class=" navbar-brand  btn btn t" style="width:250px ;margin-bottom:20px;" asp-area="" asp-controller="AdminInstructor" asp-action="Index"><i class="bi bi-incognito"></i> &nbsp Instructors</a>
            <a class=" navbar-brand btn btn t" style="width:250px ;margin-bottom:20px; " asp-area="" asp-controller="AdminStudents" asp-action="Index"> <i class="bi bi-mortarboard"></i> &nbsp Students</a>


       </div>
     
    </div>
    <div class="w-auto p-3" style="margin-left:300px;">
        <main role="main" class="pb-3 " >
            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CourseMangmentSystemWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
