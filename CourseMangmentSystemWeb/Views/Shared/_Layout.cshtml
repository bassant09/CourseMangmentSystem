        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand fw-bolder me-5 ms-4 " asp-area="" asp-controller="Home"  asp-action="" style="color:rgb(0, 86, 210); font-size:30px;">Coursera</a>
                <div class="btn-group">
                    <button type="button" class="btn   dropdown-toggle border border-dark nv me-2" data-bs-toggle="dropdown" aria-expanded="false" style="background-color:rgb(0, 86, 210); color:white ; width:100px; border:2px;">
                        Explore
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Separated link</a></li>
                    </ul>
                </div>
                <form class="d-flex">
                    <input class="form-control  p-2 " type="search" placeholder="What do you want to learn ?" aria-label="Search" style="width:500px;">
                    <a class="btn me-2" style="background-color:rgb(0, 86, 210); color:white"> <i class="bi bi-search"></i> &nbsp;  </a>


                    @*<button class="btn btn-outline-success" type="submit">Search</button>*@

                </form>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        @if (AuthanticationController.IsInstractor(Context))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark me-2" style="font-size:18px;" asp-controller="Instructor" asp-action="Index">Myaccount</a>
                            </li>
                        }
                        else if (AuthanticationController.IsStudent(Context))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark me-2" style="font-size:18px;" asp-controller="Student" asp-action="Index">Myaccount</a>
                            </li>
                        }
                        else if (AuthanticationController.IsAdmin(Context))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark me-2" style="font-size:18px;" asp-controller="Admin" asp-action="Index">Myaccount</a>
                            </li>
                        }
                        else{
                            <li class="nav-item">
                                <a class="nav-link text-dark me-2" style="font-size:18px;" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark me-2" style="font-size:18px;" asp-area="" asp-controller="Home" asp-action=""> Our Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-dark  me-2" style="font-size:18px;" asp-area="" asp-controller="Home" asp-action=""> Find your New Career </a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-dark  me-2" style="font-size:18px;" asp-area="" asp-controller="Home" asp-action="">  About us </a>
                        </li>
                        

                        <li class="nav-item">
                            <a class=" nav-link text-dark  me-2" style="font-size:23px;">   <i class="bi bi-bell"></i>  </a>
                        </li>
                        <li class="nav-item">
                            <a class=" nav-link text-dark  me-2" style="font-size:23px;">   <i class="bi bi-cart"></i>  </a>
                        </li>
                       


                    </ul>
                    @if (!AuthanticationController.IsLoggedIn(Context))
                    {
                    
                    <div class="text-end">
                   
                        <a class="btn mt-2 text-center nv" asp-action="Login" asp-controller="User"   style="color:white; background-color:rgb(0, 86, 210); width:95px;">Login   </a>
                        </div>
                    }
                    else{
                       
                        <div class="text-end">

                            <a class="btn btn-secondary mt-2 text-center nv" asp-controller="User" asp-action="Logout" style="color:white;  width:95px;">Logout   </a>
                    </div>
                 }
                </div>
            </div>
        </nav>
