@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<style>
    body{
        background-color:rgb(223,223,223)
    }
    .l{
        border:none; 
        border-bottom: 1px solid rgb(177,177,177) ; 
        width:100%;
        padding:5px;
    }

</style>
<form asp-action="Login">
<div class="row translate-middle"  style="position:absolute; top:50%; left:50%;  background-color:white ; width:900px; height:570px;">
    <div class="col-6" style="background-image:url('../images/s.jpeg');">

    </div>
    <div class="col-6 p-5">
       
        <h2 class="text-center mt-5">We are Coursera</h2>
        <h7> Welcome! Log into Account to view today's Assigments</h7>
        <div style="margin-top:35px">
            <div class="d-flex" style="align-items:center; color : rgb(177,177,177) ">
                <i class="fa-regular fa-at"></i>&nbsp
           <input class="l"  name="email" type="text" placeholder="Email" />
            </div>
        <br />
            <div class="d-flex" style="align-items:center; color : rgb(177,177,177) ">
                <i class="fa-solid fa-lock"></i>&nbsp
            <input class="l"  name="password"  type="password" placeholder="Password" />
            </div>
            <div style="margin-top:20px;">
                <input type="checkbox" id="scales" name="scales" >
                <label  class="mb-2"for="scales">Remember me </label>
            </div>
                @if (ViewBag.error != null)
                {
                    <span class="text-danger ">@ViewBag.error</span>
                }
            <div class="text-center mt-4" >
                <button  type="submit"  class="btn btn-primary" style="width:120px;" >Login </button>
            </div>
            <div class="d-flex mt-3" style="align-items:center;">
                <a> Don't have an account? </a>&nbsp;
                <a href="#">  Register now!</a>
            </div>
        </div>
    </div>
</div>
</form>